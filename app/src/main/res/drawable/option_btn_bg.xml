<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer for the gradient border -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/optionGradientStart"
                android:endColor="@color/mainHeader"
                android:type="linear"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Transparent background for the button itself -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/forEye"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

</layer-list>
